# Environment Configuration for DilSeDaan Frontend

# API Configuration
VITE_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=DilSeDaan
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Blockchain-based transparent charity donation platform"

# Blockchain Configuration
VITE_ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-api-key
VITE_POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/your-api-key
VITE_ETHEREUM_CHAIN_ID=1
VITE_POLYGON_CHAIN_ID=137

# Smart Contract Addresses
VITE_ETHEREUM_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
VITE_POLYGON_CONTRACT_ADDRESS=0x0987654321098765432109876543210987654321

# IPFS Configuration
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/
VITE_WEB3_STORAGE_TOKEN=your-web3-storage-token

# Wallet Connect
VITE_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Analytics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Social Media
VITE_TWITTER_HANDLE=@dilsedaan
VITE_FACEBOOK_PAGE=https://facebook.com/dilsedaan
VITE_INSTAGRAM_HANDLE=@dilsedaan

# Support
VITE_SUPPORT_EMAIL=support@dilsedaan.org
VITE_SUPPORT_PHONE=+91-98765-43210

# Features Flags
VITE_ENABLE_WALLET_CONNECT=true
VITE_ENABLE_CRYPTO_DONATIONS=true
VITE_ENABLE_AUDIT_SYSTEM=true
VITE_ENABLE_VOLUNTEER_PORTAL=true
VITE_ENABLE_NOTIFICATIONS=true

# Development
VITE_ENABLE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug
